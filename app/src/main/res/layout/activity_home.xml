<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.lamvak.barcodeexporter.HomeActivity">

    <Button
        android:id="@+id/takeSnapshots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Snapshots" />

    <Button
        android:id="@+id/reviewCodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review Codes" />

    <Button
        android:id="@+id/exportCodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export codes" />
</LinearLayout>
